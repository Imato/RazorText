@page 
@model IndexModel
@{
    ViewData["Title"] = "Create new";
}

<div class="text-left">
    <h1>@Model.Article.Title</h1>
    <h3>@Model.Article.Author</h3>
    <p>
        <i>@Model.Article.CreateDate</i>
    </p>
    <div>
        <form>
            <input type="text" asp-for="@Model.Article.Title" />
            <input type="text" asp-for="@Model.Article.Author" />
            <input type="text" asp-for="@Model.Article.Text" />
            <input type="button" value="Save" />
        </form>
    </div>
</div>
